{
  "Version": "2012-10-17",
  "Statement": [
    {
        "Action": "ec2:*",
        "Resource": "*",
        "Effect": "Allow",
        "Condition": {
            "StringEquals": {
                "ec2:Region": "${region}"
            }
        }
    },
    {
      "Sid": "allowLoggingToCloudWatch",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": [
        "${app_log_group_arn}"
      ]
    }
  ]
}
