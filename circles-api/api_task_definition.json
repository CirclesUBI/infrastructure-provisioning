[
  {
    "name": "circles_api",
    "image": "${circles_api_image}",
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 80
      }
    ],
    "memory": 300,
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${log_group_region}",
        "awslogs-stream-prefix": "circles_api"
      }
    },
    "environment": [
      {
        "name": "COGNITO_POOL_ID",
        "value": "${cognito_pool_id}"
      },
      {
        "name": "COGNITO_POOL_REGION",
        "value": "${aws_region}"
      },
      {
        "name": "DATABASE_URL",
        "value": "${database_url}"
      }
    ]
  }
]