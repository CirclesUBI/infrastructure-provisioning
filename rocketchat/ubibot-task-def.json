[
  {
    "name": "ubibot",
    "cpu": 25,
    "memory": 256,
    "image": "circlesubi/ubibot:latest",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 3001
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${log_group_region}",
        "awslogs-stream-prefix": "hubot",
        "mode": "non-blocking"
      }
    },
    "environment": [
      {
        "name": "ROCKETCHAT_URL",
        "value": "http://${rocketchat_url}:80"
      },
      {
        "name": "ROCKETCHAT_USER",
        "value": "ubibot"
      },
      {
        "name": "ROCKETCHAT_PASSWORD",
        "value": "${ubibot_password}"
      },
      {
        "name": "HUBOT_LOG_LEVEL",
        "value": "debug"
      },
      {
        "name": "HUBOT_AUTH_ROLES",
        "value": "admin=zgfuB2P5P2ErF6Nyr"         
      },
      {
        "name": "REDIS_URL",
        "value": "redis://redis:6379/ubibot-brain"
      },
      {
        "name": "LISTEN_ON_ALL_PUBLIC",
        "value": "false"
      },
      {
        "name": "RESPOND_TO_DM",
        "value": "true"
      },
      {
        "name": "EXTERNAL_SCRIPTS",
        "value": "moment,guid,hubot-diagnostics,hubot-help,hubot-rules,hubot-redis-brain,hubot-auth-persistent"
      }
      
      
    ],
    "links": [
      "redis"
    ]
  },
  {
    "name": "redis",
    "image": "redis:latest",
    "cpu": 10,
    "memory": 256,
    "portMappings": [
      {
        "containerPort": 6379
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${log_group_region}",
        "awslogs-stream-prefix": "redis",
        "mode": "non-blocking"
      }
    },
    "mountPoints": [
      {
        "containerPath": "/data",
        "sourceVolume": "redis"
      }
    ]
  }
]