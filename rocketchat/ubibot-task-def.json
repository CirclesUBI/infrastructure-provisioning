[
  {
    "name": "ubibot",
    "cpu": 25,
    "memory": 256,
    "image": "circlesubi/ubibot:latest",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 3001
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "hubot",
        "mode": "non-blocking"
      }
    },
    "environment": [
      {
        "name": "ROCKETCHAT_URL",
        "value": "http://${rocketchat_url}:80"
      },
      {
        "name": "ROCKETCHAT_USER",
        "value": "ubibot"
      },
      {
        "name": "ROCKETCHAT_PASSWORD",
        "value": "${ubibot_password}"
      },
      {
        "name": "HUBOT_LOG_LEVEL",
        "value": "debug"
      },
      {
        "name": "HUBOT_AUTH_ROLES",
        "value": "admin=zgfuB2P5P2ErF6Nyr"         
      },
      {
        "name": "REDIS_URL",
        "value": "redis://redis:6379/ubibot-brain"
      },
      {
        "name": "LISTEN_ON_ALL_PUBLIC",
        "value": "false"
      },
      {
        "name": "RESPOND_TO_DM",
        "value": "true"
      },
      {
        "name": "EXTERNAL_SCRIPTS",
        "value": "moment,guid,hubot-diagnostics,hubot-help,hubot-rules,hubot-redis-brain,hubot-auth-persistent"
      },
      {
        "name": "GITHUB_USER",
        "value": "${ubibot_github_user}"
      },
      {
        "name": "GITHUB_PASS",
        "value": "${ubibot_github_password}"
      }      
    ],
    "links": [
      "redis"
    ]
  },
  {
    "name": "redis",
    "image": "redis:latest",
    "cpu": 10,
    "memory": 256,
    "entryPoint": [
      "bash"
    ],    
    "command": ["-c", "sleep 3 && redis-server"],
    "portMappings": [
      {
        "containerPort": 6379,
        "hostPort": 6379
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "redis",
        "mode": "non-blocking"
      }
    },
    "mountPoints": [
      {
        "containerPath": "/data",
        "sourceVolume": "redis"
      }
    ]
  },
  {
    "name": "redis-commander",
    "image": "rediscommander/redis-commander:latest",
    "cpu": 10,
    "memory": 256,   
    "portMappings": [
      {
        "containerPort": 8081,
        "hostPort": 8081
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "redis-commander",
        "mode": "non-blocking"
      }
    },
    "environment": [
      {
        "name": "REDIS_HOST",
        "value": "redis"
      },
      {
        "name": "REDIS_PORT",
        "value": "6379"
      },
      {
        "name": "HTTP_USER",
        "value": "${redis_commander_user}"
      },
      {
        "name": "HTTP_PASSWORD",
        "value": "${redis_commander_pass}"
      }

    ],
    "links": [
      "redis:redis"
    ]
  },
  {
    "name": "s3vol",
    "image": "elementar/s3-volume:latest",
    "command": ["/data", "s3://circles-ubibot-backup"],
    "cpu": 10,
    "memory": 64,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "s3vol",
        "mode": "non-blocking"
      }
    },
    "environment": [
      {
        "name": "AWS_ACCESS_KEY_ID",
        "value": "${access_key}"
      },
      {
        "name": "AWS_SECRET_ACCESS_KEY",
        "value": "${secret_key}"
      },
      {
        "name": "AWS_DEFAULT_REGION",
        "value": "${aws_region}"
      }
    ],
    "mountPoints": [
      {
        "containerPath": "/data",
        "sourceVolume": "redis"
      }
    ]
  }
]